<h1>Search Flight</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Flight ID</th>
      <th scope="col">Departure date</th>
      <th scope="col">Departure time</th>
      <th scope="col">Arrival date</th>
      <th scope="col">Arrival date</th>
      <th scope="col">Departure airport</th>
      <th scope="col">Arrival airport</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each allFlights}}
    <tr>
      <th scope="row">{{this.flight_id}}</th>
      <td>{{this.departure_date}}</td>
      <td>{{this.departure_time}}</td>
      <td>{{this.arrival_date}}</td>
      <td>{{this.arrival_time}}</td>
      <td>{{this.departure_airport}}</td>
      <td>{{this.arrival_airport}}</td>
      <td>
        <a href="a" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
        <a href="a" type="button" class="btn btn-light btn-small"><i class="bi bi-trash"></i> Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>